@model IEnumerable<Models.ListaOrden>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container row p-0 m-0">
<div class="col-6">
    <h2 class="text-info">Lista de Ordenes</h2>
</div>
<div class="col-3 offset-3">
    <a asp-controller="Orden" asp-action="UpSert" style='cursor:pointer;' class="btn btn-info form-control text-white ">
        Añadir nuevo cliente
    </a>
</div>
<div class="col-12 border p-5">
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Total</th>
                <th># Orden</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
</div>

@section Scripts{
    <script src="~/js/orden.js"></script>
}
