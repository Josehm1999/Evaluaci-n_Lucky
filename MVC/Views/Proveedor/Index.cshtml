@{
    ViewBag.Title = "Proveedor";
}

<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Lista de Proveedores</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-controller="Proveedor" asp-action="UpSert" style='cursor:pointer;' class="btn btn-info form-control text-white ">
            Añadir nuevo proveedor
        </a>
    </div>
    <div class="col-12 border p-6">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Empresa</th>
                    <th>Contacto</th>
                    <th>Título</th>
                    <th>Ciudad</th>
                    <th>País</th>
                    <th>Teléfono</th>
                    <th>Fax</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/proveedor.js"></script>
}
