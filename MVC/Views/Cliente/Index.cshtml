@{
    ViewBag.Title = "Clientes";
    Layout = "_Layout";
}
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Lista de Clientes</h2>
    </div>
    <div class="col-3 offset-3">
        <a   asp-controller="Cliente" asp-action="UpSert" style='cursor:pointer;' class="btn btn-info form-control text-white ">
            Añadir nuevo cliente
        </a>
    </div>
    <div class="col-12 border p-5">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Ciudad</th>
                    <th>País</th>
                    <th>Teléfono</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/cliente.js"></script>
}